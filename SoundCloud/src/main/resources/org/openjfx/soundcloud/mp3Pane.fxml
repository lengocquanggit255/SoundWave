<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="142.0" prefWidth="720.0" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.SoundCloud.MP3Controller">
   <children>
      <Label fx:id="songLabel" alignment="CENTER" layoutY="-1.0" prefHeight="60.0" prefWidth="720.0" text="MP3 Player" textFill="#00ff1a">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <ProgressBar fx:id="songProgressBar" layoutY="55.0" prefHeight="10.0" prefWidth="720.0" progress="0.0" style="-fx-accent: BLACK;" />
      <Button fx:id="playButton" layoutX="347.0" layoutY="93.0" mnemonicParsing="false" onAction="#playButtonClicked" prefHeight="40.0" prefWidth="15.0">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <ImageView fx:id="playButtonImageView" fitHeight="30.0" fitWidth="83.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@playButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="previousButton" layoutX="237.0" layoutY="93.0" mnemonicParsing="false" onAction="#previousMedia" prefHeight="40.0" prefWidth="24.0">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@previousButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="nextButton" layoutX="444.0" layoutY="93.0" mnemonicParsing="false" onAction="#nextMedia" prefHeight="40.0" prefWidth="21.0">
         <font>
            <Font size="14.0" />
         </font>
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@nextButton.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Slider fx:id="volumeSlider" layoutX="637.0" layoutY="78.0" max="100.0" prefHeight="10.0" prefWidth="81.0" value="50.0" />
   </children>
</AnchorPane>
